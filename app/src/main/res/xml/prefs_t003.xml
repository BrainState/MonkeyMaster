<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Preferences shared by all tasks">
        <Preference
            app:title="Preferences shared by all tasks"
            app:fragment="com.cebsit.monkeymaster.tasks.allshared.TaskPrefsFrag_all"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Task Preference">

        <ListPreference
            android:defaultValue="White"
            android:entries="@array/lp_entries_colourNames"
            android:entryValues="@array/lp_entryValues_colourNames"
            app:key="cueColor"
            app:title="Colour of cue" />
    </PreferenceCategory>

</PreferenceScreen>