<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Task Preference">

        <ListPreference
            app:key="numDistractors"
            app:title="Number of Distractors"
            android:defaultValue="3"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="750"
            app:key="durationON"
            app:title="Duration (ms) to show the cue"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            android:defaultValue="500"
            app:key="startDelay"
            app:title="Wait time (ms) until cue"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            android:defaultValue="1500"
            app:key="durationOFF"
            app:title="Wait time (ms) until choice"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

</PreferenceScreen>