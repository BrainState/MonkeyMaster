<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="New Record">
        <ListPreference
            app:key="record_task"
            app:title="Select the task"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:key="record_monkey"
            app:title="Select the monkey executing the task"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue="no notes"
            app:key="record_notes"
            app:title="Add notes about this new record"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

</PreferenceScreen>